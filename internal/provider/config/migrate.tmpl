{{- with .Cloud }}
atlas {
  cloud {
    token = "{{ .Token }}"
{{- if .Project }}
    project = "{{ .Project }}"
{{- end }}
{{- if .URL }}
    url = "{{ .URL }}"
{{- end }}
  }
}
{{- end }}
{{ with .RemoteDir }}
data "remote_dir" "this" {
  name = "{{ .Name }}"
{{- if .Tag }}
  tag  = "{{ .Tag }}"
{{- end }}
}
{{- end }}
env {
  name = atlas.env
  url  = "{{ .URL }}"
{{- if .DevURL }}
  dev  = "{{ .DevURL }}"
{{- end }}
{{- if .Schemas }}
  schemas = [
  {{- range .Schemas }}
    "{{ . }}",
  {{- end }}
  ]
{{- end }}
{{- if .Exclude }}
  exclude = [
  {{- range .Exclude }}
    "{{ . }}",
  {{- end }}
  ]
{{- end }}
  migration {
{{- if and .Cloud .RemoteDir }}
    dir = data.remote_dir.this.url
{{- else }}
    dir = "file://{{ or .DirURL "migrations" }}"
{{- end }}
{{- if .Baseline }}
    baseline = "{{ .Baseline }}"
{{- end }}
{{- if .RevisionsSchema }}
    revisions_schema = "{{ .RevisionsSchema }}" 
{{- end }}
  }
}
